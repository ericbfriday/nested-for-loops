{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@friday-friday/weevil": ["libs/weevil/src/index.ts"],
      "@friday-friday/deval": ["libs/deval/src/index.ts"],
      "@friday-friday/little-friends": ["libs/little-friends/src/index.ts"],
      "@friday-friday/feature/callbacks": [
        "libs/feature/callbacks/src/index.ts"
      ],
      "@friday-friday/feature/user-code": [
        "libs/feature/user-code/src/index.ts"
      ],
      "@friday-friday/feature/web-apis": ["libs/feature/web-apis/src/index.ts"],
      "@friday-friday/feature/settings": ["libs/feature/settings/src/index.ts"],
      "@friday-friday/feature/call-stack": [
        "libs/feature/call-stack/src/index.ts"
      ],
      "@friday-friday/feature/render-queue": [
        "libs/feature/render-queue/src/index.ts"
      ],
      "@friday-friday/feature/html-editor": [
        "libs/feature/html-editor/src/index.ts"
      ],
      "@friday-friday/ui-kit/shared-components": [
        "libs/ui-kit/shared-components/src/index.ts"
      ],
      "@friday-friday/feature/jsts-editor": [
        "libs/feature/jsts-editor/src/index.ts"
      ],
      "@friday-friday/utils/common": ["libs/utils/common/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
