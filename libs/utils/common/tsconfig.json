{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jest"],
    "baseUrl": ".",
    "declaration": true,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "./release",
    "rootDir": ".",
    "lib": ["es2015", "dom"],
    "target": "es5",
    "skipLibCheck": true
  },
  "include": ["**/*.ts"]
}
